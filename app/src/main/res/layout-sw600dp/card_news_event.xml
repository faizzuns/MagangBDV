<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    android:id="@+id/card_news_event"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/bdv_logo"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/card_foto"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kunjungan Universitas Indonesia"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/card_foto"
            android:textColor="@color/judul"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="19sp"
            android:id="@+id/card_judul"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="September 15 @ 2:00pm - 4:00pm"
            android:textColor="@android:color/black"
            android:layout_below="@id/card_judul"
            android:layout_alignLeft="@+id/card_judul"
            android:layout_marginTop="11dp"
            android:textSize="15sp"
            android:id="@+id/card_detail_waktu"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kunjungan Universitas Indonesia ke Bandung DIgital Valley, mahasiswa mahasiswa jurusan Sistem Informasi"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_below="@id/card_detail_waktu"
            android:layout_alignLeft="@+id/card_detail_waktu"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/card_content"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>